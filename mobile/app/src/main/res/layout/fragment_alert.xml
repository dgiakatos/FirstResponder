<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlertFragment">

    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mission_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/mission_details_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/mission_details_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="64dp"
                    android:text="Lorem ipsum dolor sit amet, id inani vituperatoribus quo. Assum equidem eligendi eam te, in qui singulis recteque. Altera dissentias est at. No minimum tacimates vix, eam erant aliquam ullamcorper id, sit ea prima dicam platonem. Sumo rebum democritum ut duo. Liber doming definiebas cum et. In assueverit necessitatibus pri.  Quem doctus est ne. His amet definiebas temporibus ex, magna eripuit blandit eam eu. No verear delicatissimi quo, diceret maiorum democritum sed eu. Est option graecis rationibus id, nisl inani delenit te has. Cum in eros posse, nemore antiopam accusamus no duo, ius an eros tritani probatus. Expetenda mnesarchum eum ad.  Bonorum mentitum iracundia id vim, quidam epicurei vim ei. Summo doming oblique eu qui, sumo exerci option mei ex. Illum urbanitas persequeris ad pro, ad nulla facilisis qualisque qui. Eos ex offendit scaevola pertinax, per an delenit vituperatoribus.  Eu tritani percipit menandri vix. Quo at agam legere appellantur. Te impetus officiis luptatum pro, pri et eruditi tincidunt. Equidem copiosae et sed, apeirian deserunt has id, viris causae tritani no per. Ei mea ridens vidisse eleifend, ea qui accumsan officiis.  Solet affert vocent duo in, at iuvaret consulatu comprehensam sed. Euismod euripidis assueverit eam in, et mei porro assum. Ex ludus accusata mei, at graeco tibique electram has. Eius primis ut duo, ea postea appareat invidunt pri. Est at legimus voluptaria, prima ignota an sit." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/heavy_bleeding_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mission_details_linear_layout">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Heavy Bleeding"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/heavy_bleeding_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/heavy_bleeding_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:text="YES" />

                    <RadioButton
                        android:id="@+id/heavy_bleeding_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:text="NO" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/treat_shock_linear_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heavy_bleeding_linear_layout">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Shock"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/treat_shock_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/treat_shock_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:text="YES" />

                    <RadioButton
                        android:id="@+id/treat_shock_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:text="NO" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cpr_linear_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/treat_shock_linear_layout">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="CPR"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/cpr_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/cpr_yes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:text="YES" />

                    <RadioButton
                        android:id="@+id/cpr_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:text="NO" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/aes_linear_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cpr_linear_layout">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Defibrilator"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/aes_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/aes_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:text="YES" />

                    <RadioButton
                        android:id="@+id/aes_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:text="NO" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons_linear_layout"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aes_linear_layout">

                <Button
                    android:id="@+id/button_accept_mission"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/accept_mission_button"

                    android:text="Accept" />

                <Button
                    android:id="@+id/button_reject_mission"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/reject_misson_button"
                    android:text="Reject" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </android.widget.ScrollView>

</FrameLayout>